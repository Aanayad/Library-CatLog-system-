#include <stdio.h>
#include <string.h>

#define MAX 100   

struct Book {
    int id;
    char title[50];
    char author[50];
    char isbn[20];
};

struct Book library[MAX];
int count = 0;

void addBook() {
    if (count >= MAX) {
        printf("\nLibrary is full! Cannot add more books.\n");
        return;
    }

    printf("\nEnter Book ID: ");
    scanf("%d", &library[count].id);

    printf("Enter Title: ");
    getchar();
    fgets(library[count].title, 50, stdin);
    library[count].title[strcspn(library[count].title, "\n")] = 0;

    printf("Enter Author: ");
    fgets(library[count].author, 50, stdin);
    library[count].author[strcspn(library[count].author, "\n")] = 0;

    printf("Enter ISBN: ");
    fgets(library[count].isbn, 20, stdin);
    library[count].isbn[strcspn(library[count].isbn, "\n")] = 0;

    count++;
    printf("\nâœ” Book added successfully!\n");
}

void displayBooks() {
    if (count == 0) {
        printf("\nNo books available.\n");
        return;
    }

    printf("\n--- Library Books ---\n");
    for (int i = 0; i < count; i++) {
        printf("ID: %d | Title: %s | Author: %s | ISBN: %s\n",
                library[i].id, library[i].title,
                library[i].author, library[i].isbn);
    }
}


void searchBook() {
    if (count == 0) {
        printf("\nNo books in library.\n");
        return;
    }

    char isbn[20];
    printf("\nEnter ISBN to search: ");
    getchar();
    fgets(isbn, 20, stdin);
    isbn[strcspn(isbn, "\n")] = 0;

    for (int i = 0; i < count; i++) {
        if (strcmp(library[i].isbn, isbn) == 0) {
            printf("\n Book Found!\n");
            printf("ID: %d | Title: %s | Author: %s | ISBN: %s\n",
                   library[i].id, library[i].title, library[i].author, library[i].isbn);
            return;
        }
    }

    printf("\n Book not found.\n");
}

void deleteBook() {
    if (count == 0) {
        printf("\nNo books to delete.\n");
        return;
    }

    int id;
    printf("\nEnter Book ID to delete: ");
    scanf("%d", &id);

    for (int i = 0; i < count; i++) {
        if (library[i].id == id) {
            for (int j = i; j < count - 1; j++) {
                library[j] = library[j + 1];
            }
            count--;
            printf("\nðŸ—‘ Book deleted successfully!\n");
            return;
        }
    }

    printf("\n Book not found.\n");
}

int main() {
    int choice;

    do {
        printf("\n===== Library Catalog Menu =====\n");
        printf("1. Add Book\n");
        printf("2. Display All Books\n");
        printf("3. Search Book by ISBN\n");
        printf("4. Delete Book\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: addBook(); break;
            case 2: displayBooks(); break;
            case 3: searchBook(); break;
            case 4: deleteBook(); break;
            case 5: printf("\nExiting... Goodbye!\n"); break;
            default: printf("\nInvalid choice! Try again.\n");
        }

    } while (choice != 5);

    return 0;
}
